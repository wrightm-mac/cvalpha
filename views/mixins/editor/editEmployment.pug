mixin editEmployment
  div.cvSection
    table#cvSectionEmployment(data-append='name:editorColumnEmploymentName,title:editorColumnEmploymentTitle,date:editorColumnEmploymentDate,*3description:!editorColumnEmploymentDescription', data-mode='first')
      tr
        th.editorColumnVisible.editorAdd
          img(src='/images/badge_plus.png')
        th.editorSectionTitle(colspan=3)= info.employment.title
        th.editoreDelete
      each item in info.employment.items
        tr(data-id=id.next())
          td.editorColumnVisible
            input(id='visible_' + item.id, type='checkbox', checked=item.visible)
          td.editorColumnEmploymentName
            span.editorClickable(data-id='name')= item.name
          td.editorColumnEmploymentTitle
            span.editorClickable(data-id='title')= item.title
          td.editorColumnEmploymentDate
            span.editorClickable(data-id='date')= item.from + ' to ' + item.to
          td.editorDelete
            img(src='/images/badge_minus.png')
        tr(data-id=id.prev())
          td.editorColumnVisible
            input(id='description_' + item.id, type='checkbox', checked=item.visible)
          td(colspan=3).editorEmploymentColumnDescription
            span.editorClickable(data-id='description', data-edit='large')= item.description
