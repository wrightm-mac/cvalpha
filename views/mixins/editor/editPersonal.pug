mixin editPersonal
  div.cvSection
    table#cvSectionPersonal(data-record=cv.personal._id, data-section='personal')
      tr
        th.editorColumnVisible.editorAdd
          img(src='/images/badge_plus.png')
        th.editorSectionTitle(colspan=2)= cv.personal.title
        th.editorDelete
      each item in cv.personal.items
        tr(data-record=item._id,data-id=id.next())
          td.editorColumnVisible
            input(type='checkbox', checked=item.visible)
          td.editorColumnPersonalName
            span.editorClickable(data-id='name')= item.name
          td.editorColumnPersonalValue
            span.editorClickable(data-id='value')= item.value
          td.editorDelete
            img(src='/images/badge_minus.png')
